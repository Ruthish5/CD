%{
#include <stdio.h>

int whitespace_count = 0;
int newline_count = 0;
%}

%%

[ \t]+     { whitespace_count += yyleng; }
\n         { newline_count++; }
.          { /* Ignore all other characters */ }

%%

int main() {
    printf("Enter input (Press Ctrl+D to end):\n");
    yylex();
    printf("\nTotal Whitespaces: %d\n", whitespace_count);
    printf("Total Newlines: %d\n", newline_count);
    return 0;
}

int yywrap() {
    return 1;
}
