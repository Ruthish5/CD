#include<stdio.h>
%}

%%
"int"|"float"|"char"|"if"|"else"|"for"|"while"|"do"|"return"|"break"|"continue"|"void"|"static"|"switch"|"case"|"default"|"const"|"struct"|"typedef"|"union"|"enum"|"goto"|"sizeof"|"long"|"short"|"signed"|"unsigned"|"auto"|"register"|"extern"|"volatile"|"double"
    { printf("Keyword: %s\n", yytext); }

[a-zA-Z_][a-zA-Z0-9_]*  { printf("Identifier: %s\n", yytext); }

[ \t\n]+                { ; }  // Ignore whitespace
.                       { ; }  // Ignore symbols
%%

int yywrap() { return 1; }

int main() {
    printf("Enter code snippet:\n");
    yylex();
    return 0;
}
