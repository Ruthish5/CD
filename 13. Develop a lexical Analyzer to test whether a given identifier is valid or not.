%{
#include <stdio.h>
#include <string.h>

char *keywords[] = {
    "int", "float", "char", "double", "if", "else", "while", "for", "return", "void", "break", "continue"
};
int is_keyword(const char *word) {
    for (int i = 0; i < sizeof(keywords)/sizeof(keywords[0]); i++) {
        if (strcmp(word, keywords[i]) == 0)
            return 1;
    }
    return 0;
}
%}

%%

[a-zA-Z_][a-zA-Z0-9_]* {
    if (is_keyword(yytext))
        printf("'%s' is a keyword, not a valid identifier\n", yytext);
    else
        printf("'%s' is a valid identifier\n", yytext);
}

[0-9]+ {
    printf("'%s' is a constant, not an identifier\n", yytext);
}

.|\n { /* ignore other characters */ }

%%

int main() {
    printf("Enter words (identifiers/keywords/constants):\n");
    yylex();
    return 0;
}

int yywrap() {
    return 1;
}
