#include <stdio.h>
#include <string.h>

int main() {
    char line[500];

    printf("Enter a line (end with $ on a new line):\n");
	    while (1) {
        fgets(line, sizeof(line), stdin);
        
        if (line[0] == '$')
            break;
        line[strcspn(line, "\n")] = '\0';
        if (strncmp(line, "//", 2) == 0) {
            printf("Single-line comment.\n");
        }
        else if (strncmp(line, "/*", 2) == 0 && strstr(line, "*/")) {
            printf("Multi-line comment.\n");
        }
        else if (strncmp(line, "/*", 2) == 0 && !strstr(line, "*/")) {
            printf("Start of multi-line comment (continues in next lines).\n");
            while (1) {
                fgets(line, sizeof(line), stdin);
                if (strstr(line, "*/")) {
                    printf("End of multi-line comment.\n");
                    break;
                }
            }
        }
        else {
            printf("Not a comment.\n");
        }
    }

    return 0;
}
